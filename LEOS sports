<script>
function show(id){
document.querySelectorAll("section").forEach(s=>s.classList.remove("active"));
document.getElementById(id).classList.add("active");
}

const API_KEY="3d2c930b1ae931073c5fb6110d56f22d";
const HOST="api-football-v1.p.rapidapi.com";
let selectedLeague = 39;
let season = 2025;

function changeLeague(id){
selectedLeague = id;
loadStandings();
loadFixtures();
}

function loadLive(){
fetch("https://"+HOST+"/v3/fixtures?live=all",{
headers:{"X-RapidAPI-Key":API_KEY,"X-RapidAPI-Host":HOST}
})
.then(r=>r.json())
.then(d=>{
let h="";
(d.response||[]).slice(0,8).forEach(m=>{
h+=`<div class="card">
${m.league.name}<br>
${m.teams.home.name} <b>${m.goals.home}-${m.goals.away}</b> ${m.teams.away.name}
</div>`;
});
document.getElementById("liveData").innerHTML=h||"Tidak ada live.";
});
}

function loadStandings(){
fetch("https://"+HOST+"/v3/standings?league="+selectedLeague+"&season="+season,{
headers:{"X-RapidAPI-Key":API_KEY,"X-RapidAPI-Host":HOST}
})
.then(r=>r.json())
.then(d=>{
let rows=d.response[0].league.standings[0];
let html="";
rows.forEach(t=>{
html+=`<tr>
<td>${t.rank}</td>
<td>${t.team.name}</td>
<td>${t.all.played}</td>
<td>${t.points}</td>
</tr>`;
});
document.getElementById("table").innerHTML=`<tr><th>#</th><th>Tim</th><th>Main</th><th>Poin</th></tr>`+html;
});
}

function loadFixtures(){
fetch("https://"+HOST+"/v3/fixtures?league="+selectedLeague+"&season="+season+"&next=5",{
headers:{"X-RapidAPI-Key":API_KEY,"X-RapidAPI-Host":HOST}
})
.then(r=>r.json())
.then(d=>{
let h="";
(d.response||[]).forEach(m=>{
h+=`<div class="card">
${m.teams.home.name} vs ${m.teams.away.name}<br>
${new Date(m.fixture.date).toLocaleString()}
</div>`;
});
document.getElementById("fixturesData").innerHTML=h;
});
}

// Load awal
loadLive();
loadStandings();
loadFixtures();

</script>

